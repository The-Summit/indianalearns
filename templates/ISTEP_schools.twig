{% extends "base.twig" %}
{% block content %}
<div id="loading-overlay" class="modal">
	<div class="spinner">
	  <div class="double-bounce1"></div>
	  <div class="double-bounce2"></div>
	</div>
</div>
<div id="map-canvas" style="width: 100%; height: 100%"></div>
<div class="map-controls col-md-2 container">
<div class="map-control grade-control col-md-12">
	<h1>Controls</h1>
	<a href="#" class="minimize"><span class="glyphicon glyphicon-minus"></a>
	<div class="minimizable">
		<h3>Grade Level</h3>
		<select class="form-control" name="grade">
		{% for i in 12..-2 %}
			{% if i == -2 %}
				{% set gr = "Special Ed." %}
			{% elseif i == -1 %}
				{% set gr = "Pre-K" %}
			{% elseif i == 0 %}
				{% set gr = "Kindergarten" %}
			{% else %}
				{% set gr = i %}
			{% endif %}
			<option label="{{gr}}" value="{{i}}" {% if i==7 %}selected{%endif%}>{{gr}}</option>
		{% endfor %}
		</select>
		<h3>Assessment</h3>
			<select class="form-control" name="subject">
				<option value="ela_percent_pass" selected>English / Language Arts</option>
				<option value="math_percent_pass">Mathematics</option>
				<option value="pass_both_percent">Combined</option>
			</select>
		<h3>Year</h3>
			<select class="form-control" name="year">
				{% for i in 2014..2009 %}
					<option value="{{i}}" {% if loop.first %}selected{%endif%}>{{i}}</option>
				{% endfor %}
			</select>
		<h3>Passing</h3>
		<div class="input-group spinner">
			<input type="text" class="form-control" value="85%" name="score">
			<div class="input-group-btn-vertical">
				<button class="btn btn-default dropup"><span class="caret"></span></button>
				<button class="btn btn-default"><span class="caret"></span></button>
			</div>
		</div>	
	</div>
</div>
<div class="map-control key-control col-md-12">
	<h1>Legend</h1>
	<a href="#" class="minimize"><span class="glyphicon glyphicon-minus"></a>
	<dl class="dl-horizontal minimizable">
		<dt>Beat the score</dt><dd><img src="http://maps.google.com/mapfiles/marker_green.png" alt="Beat score!" /></dd>
		<dt>Missed the score</dt><dd><img src="http://maps.google.com/mapfiles/marker.png" alt="Missed score!" /></dd>
		<dt>No data available</dt><dd><img src="http://maps.google.com/mapfiles/marker_grey.png" alt="No data" /></dd>
	</dl>
</div>
</div>
{% endblock %}

{% block footer %}
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAbHPk6pI4iv5t6HVIxgsjdyusQKsW5Ggw&libraries=geometry,visualization"></script>
	<script src="/assets/js/better_radius.js"></script>
	<script src="/assets/js/ISTEP_schools.js" /></script>
{% endblock %}
